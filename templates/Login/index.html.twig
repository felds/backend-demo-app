{% extends 'base.html.twig' %}

{% block title -%}
    Entrar &ndash; {{ parent() }}
{%- endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-4 my-5">Entrar</h1>

        <form action="{{ path('app_login_index') }}" name="login" method="POST" novalidate>
            <div id="login">
                <div class="form-group">
                    <label class="form-control-label required" for="_username">Nome de usu√°rio</label>
                    <input type="text" id="_username" name="_username" required="required" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="_password">Senha</label>
                    <input type="password" id="_password" name="_password" required="required" class="form-control">
                </div>
            </div>

            <p class="my-5">
                <button class="btn btn-dark">Entrar</button>
                <a class="btn btn-link" href="{{ path('homepage') }}">Cancelar</a>
            </p>

            <input type="hidden" name="_token" value="{{ csrf_token('login') }}">
        </form>
    </div>
{% endblock %}
