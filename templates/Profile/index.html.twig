{% extends 'base.html.twig' %}

{% block title -%}
Meu perfil &ndash; {{ parent() }}
{%- endblock %}

{% block body %}
    <div class="container py-5">
        <div class="text-center">
            <img src="https://unsplash.it/120/120" alt="" class="img-thumbnail rounded-circle mb-2">

            <h2 class="display-4 text-center">{{ user }}</h2>

            {% if user.email %}
                <p>{{ user.email }}</p>
            {% endif %}

            {% if user.favQuote %}
                <blockquote class="blockquote font-italic">
                    {{ user.favQuote|nl2br }}
                </blockquote>
            {% endif %}

            <p>
                <a href="{{ path('app_profile_edit') }}" class="btn btn-link">Editar perfil</a>
            </p>
        </div>
    </div>
{% endblock %}
